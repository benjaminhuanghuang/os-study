# 设置虚拟机内存为32MB
megs: 32

# 设置VGA BIOS镜像
vgaromimage: file=$BXSHARE/VGABIOS-lgpl-latest

# 设置从硬盘启动
# boot: disk

# boot from fd
boot: floppy
floppya: type=1_44, 1_44=boot.img,  status=inserted

# 设置日志文件
log: bochsout.txt

# 关闭鼠标
mouse: enabled=0

# 打开键盘
keyboard: type=mf, serial_delay=250

# 添加gdb远程调试支持
# gdbstub: enabled=1, port=1234, text_base=0, data_base=0, bss_base=0